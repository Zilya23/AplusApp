<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplusApp.Pages.AuthorizPage"
             Background="White">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png" Margin="30"/>
            
            <StackLayout>
                <StackLayout>
                    <Label Text="Логин" TextColor="Black" Margin="15"/>
                    <Entry Margin="15" BackgroundColor="#E8E8E8"/>
                </StackLayout>

                <StackLayout>
                    <Label Text="Пароль" TextColor="Black" Margin="15"/>
                    <Entry Margin="15" BackgroundColor="#E8E8E8"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button x:Name="btn_Registr" Text="Зарегистрироваться" TextColor="White"  HorizontalOptions="Start" Clicked="btn_Registr_Clicked"/>
                <Button x:Name="btn_Entery" Text="Войти" TextColor="White"  HorizontalOptions="End" Clicked="btn_Entery_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>